                },
        {
                    "outputWriters": [
                        {
                            "@class": "com.googlecode.jmxtrans.model.output.GangliaWriter",
                            "settings": {
                                "groupName": "kafka topic stats",
                                "port": 8655,
                                "host": "tzgm4001.grid.uj1.inmobi.com",
                "typeNames":[
                    "name"
                ]
                            }
                        }
                    ],
                    "obj": "\"kafka.server\":type=\"BrokerTopicMetrics\",name=*",
