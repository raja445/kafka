<%# coding: UTF-8%>
KafkaServer {
    com.sun.security.auth.module.Krb5LoginModule required
    useKeyTab=true
    keyTab="<%= node["kafka"]["kerberos"]["keytab"] %>"
    storeKey=true
    useTicketCache=false
    serviceName="kafka"
    principal="<%= node["kafka"]["kerberos"]["principal"] %>";
};

// ZooKeeper client authentication
Client {
    com.sun.security.auth.module.Krb5LoginModule required
    useKeyTab=true
    storeKey=true
    keyTab="<%= node["kafka"]["kerberos"]["keytab"] %>"
    principal="<%= node["kafka"]["kerberos"]["principal"] %>";
};

//Kafka client configuration without keytab, for producers / consumers
KafkaClient {
    com.sun.security.auth.module.Krb5LoginModule required
    useTicketCache=true
    renewTicket=true
    serviceName="kafka";
};

